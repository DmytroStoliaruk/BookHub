<div class="w-full">
  <div class="flex items-center">
    <h1 class="font-bold text-4xl">List of books</h1>

    <div class="ml-auto flex space-x-4">
      <%= simple_form_for :search, url: search_path, method: :get do |f| %>
        <div class="flex items-center space-x-2">
          <%= f.input :query, input_html: { placeholder: "Search in library..." }, label: false %>
          <%= f.submit "Search", class: "btn-gray" %>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to "New book", new_book_path, class: "btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="books-list">
    <%= render partial: "books/cover", collection: @books, as: :book %>
  </div>
</div>
