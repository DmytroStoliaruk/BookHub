<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">List of books</h1>
    <% if user_signed_in? %>
      <%= link_to "New book", new_book_path, class: "btn-primary" %>
    <% end %>
  </div>
  <div class="books-list">
    <%= render partial: "books/cover", collection: @books, as: :book %>
  </div>
</div>
