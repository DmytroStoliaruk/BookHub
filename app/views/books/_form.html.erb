  <% end %>
  
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block-form-text" %>
  </div>

  <div class="my-5">
    <%= form.label :author %>
    <%= form.text_field :author, class: "block-form-text" %>
  </div>

  <div class="my-5">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, class: "block-form-text" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, class: "block-form-area" %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn-gray" %>
  </div>
<% end %>
