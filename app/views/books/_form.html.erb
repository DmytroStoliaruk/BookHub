<%= simple_form_for @book, defaults: { input_html: { class: "w-full" } } do |f| %>
  <div class="my-5">
    <%= f.input :title %>
  </div>
  <div class="my-5">
    <%= f.input :author %>
  </div>
  <div class="my-5">
    <%= f.input :isbn %>
  </div>
  <div class="my-5">
    <%= f.input :description %>
    </div>
  <div class="my-5">
    <%= f.button :submit, class: "btn-gray" %>
  </div>
<% end %>
