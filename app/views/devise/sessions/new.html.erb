<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Log in</h1>
  <div class="form">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                        defaults: { input_html: { class: "w-full" } }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean, input_html: { class: "w-100" }  if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions flex">
        <%= f.button :submit, "Log in", class: "btn-gray" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn-primary" %>
        <%= link_to "Back to books", books_path, class: "btn-gray" %>
      </div>
    <% end %>
  </div>
</div>
